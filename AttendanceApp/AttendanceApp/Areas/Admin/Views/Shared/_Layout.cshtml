<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - مدیریت سیستم حضور و غیاب</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header class="container">
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#"> مدیریت سیستم حضور و غیاب</a>
                </div>
                <ul class="nav navbar-nav">
                    <li>
                        <a href="@Url.Action("Index", "ApplicationUsers")">
                            <span class="fa fa-home"></span>
                        </a>
                    </li>
                    <li class="active"><a href="@Url.Action("Create", "ApplicationUsers")">افزودن کارمند</a></li>
                </ul>
                <div class="nav navbar-nav navbar-left">
                        <a class="navbar-brand" href="@Url.Action("Index", "ApplicationUsers")">
                          صفحه ادمین اصلی
                        </a>
                        <a class="navbar-brand" href="#">
                            <span class="fa fa-power-off"></span>
                        </a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container" id="wrapper">
        <div class="row">
            <div class="col-md-12">
                @if (!string.IsNullOrEmpty(TempData["Message"]?.ToString()))
                {
                    <div class="alert alert-@(TempData["MessageClass"]??"success")">
                        @TempData["Message"]
                    </div>
                }

            </div>
        </div>
        <div class="row">
            
            <main class="col-md-12">
                @RenderBody()
            </main>
        </div>
    </div>
    <footer class="container-fluid">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                &copy; @DateTime.Now.Year
                تمامی حقوق این سیستم متعلق به ..... است
            </div>
        </div>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
